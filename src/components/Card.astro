---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  content: string;
  image: string;
  classes?: string;
}
const { title, content, image, classes } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>("@/assets/*.svg");
if (!images[image])
  throw new Error(`"${image}" does not exist in glob: "@/assets/*.svg}"`);
---

<section
  class:list={[
    classes,
    "rounded-md border border-t-4 border-secondaryLightGray bg-white p-6 shadow-2xl",
  ]}
>
  <h2>{title}</h2>
  <p>{content}</p>
  <Image src={images[image]()} alt={title} loading={"eager"} />
</section>

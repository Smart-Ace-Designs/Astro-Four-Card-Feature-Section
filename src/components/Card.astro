---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  content: string;
  image: string;
  classes?: string;
}
const { title, content, image, classes } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>("@/assets/*.svg");
if (!images[image])
  throw new Error(`"${image}" does not exist in glob: "@/assets/*.svg}"`);
---

<section
  class:list={[
    classes,
    "border-theme-light-gray mx-auto w-[310px] rounded-md border border-t-4 bg-white p-6 shadow-2xl lg:w-[350px] lg:p-7",
  ]}
>
  <h2 class="text-theme-very-dark-blue mb-2 text-xl font-semibold">
    {title}
  </h2>
  <p class="text-theme-grayish-blue mb-8 text-[13px] leading-6 lg:mb-10">
    {content}
  </p>
  <div class="flex justify-end">
    <Image src={images[image]()} alt={title} loading={"eager"} width="58" />
  </div>
</section>
